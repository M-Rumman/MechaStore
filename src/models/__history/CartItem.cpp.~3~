#ifndef CARTITEM_H
#define CARTITEM_H
#include "Component.h"
using namespace std;

class CartItem {
    Component component;
    int quantity;

public:
    CartItem();
    CartItem(const Component& component, int quantity);

    double getTotal() const;
    int getQuantity() const;
    void setQuantity(int quantity);

    // Add this getter to fix Cart.cpp errors
    const Component& getComponent() const { return component; }

    friend class Cart; // Cart can access private members

    friend ostream& operator<<(ostream &out, const CartItem &item) {
        out << item.component << " x" << item.quantity << " = $" << item.getTotal();
        return out;
    }
};

#endif

