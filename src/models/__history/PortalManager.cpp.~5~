#include "PortalManager.h"
#include <iostream>
using namespace std;


void PortalManager::registerUser(User* u) {
users.push_back(u);
cout << "User registered." << endl;
}


User* PortalManager::login(string username, string password) {
for(auto u : users){
if(u->getUserName() == username && u->verifyPassword(password)){
cout << "Login successful." << endl;
return u;
}
}
cout << "Login failed." << endl;
return nullptr;
}


vector<Component>& PortalManager::getComponents() { return components; }


void PortalManager::addOrder(const Order &o) {
orders.push_back(o);
cout << "Order added." << endl;
}


vector<Order>& PortalManager::getOrders() { return orders; }