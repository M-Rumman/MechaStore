#ifndef USER_H
#define USER_H

#include<string>
using namespace std;

class User{
	int cms_id;
	string username;
	string password;
	string whatsapp_no;
	bool isAdmin;
	public:
	User();
	User(int id, string username, string password, string whatsapp_no, book isAdmin);
	const int getId();
	const string getUserName();
	const string getPassword();
	bool getisAdmin() const;
	void setWhatsapp(string whatsapp_no);
	bool verifyPassword(string input) const;
};
#endif